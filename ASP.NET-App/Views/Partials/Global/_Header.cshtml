@if (signInManager.IsSignedIn(User))
{
    <header>
        <div class="container">
            <div class="logo"><img src="/images/logo.svg" alt="logo">C.Shack</div>
            <nav id="menu" class="menu-links">
                <a class="link" asp-controller="home" asp-action="index">HOME</a>
                <a class="link" asp-controller="products" asp-action="index">PRODUCTS</a>
                <a class="link" asp-controller="contactUs" asp-action="index">CONTACT</a>
            </nav>
            <nav class="menu-icons">
                @if (signInManager.IsSignedIn(User) && User.Claims.FirstOrDefault(c => c.Type == "IsAdmin")?.Value == "true")
                {
                    <a class="link" asp-controller="admin" asp-action="index">Admin</a>

                }
                <a class="link" asp-controller="account" asp-action="index">@User.FindFirst("DisplayFirstName")?.Value</a>
                <a class="link" asp-controller="logout" asp-action="index">Logout</a>
            </nav>
            <div class="toggle">
                <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                    <i id="icon" class="fas fa-bars fa-1x"> </i>
                </button>
            </div>
        </div>
    </header>
}

else
{
    <header>
        <div class="container">
            <div class="logo"><img src="/images/logo.svg" alt="logo">C.Shack</div>
            <nav id="menu" class="menu-links">
                <a class="link" asp-controller="home" asp-action="index">HOME</a>
                <a class="link" asp-controller="products" asp-action="index">PRODUCTS</a>
                <a class="link" asp-controller="contactUs" asp-action="index">CONTACT</a>
            </nav>
            <nav class="menu-icons">

                <a class="link" asp-controller="register" asp-action="index">Register</a>
                <a class="link" asp-controller="login" asp-action="index">Login</a>

            </nav>
            <div class="toggle">
                <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                    <i id="icon" class="fas fa-bars fa-1x"></i>
                </button>
            </div>
        </div>
    </header>
}

