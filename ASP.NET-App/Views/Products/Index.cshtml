@{
    ViewData["Title"] = "Products";
}

@model List<ASP.NET_App.Models.Entities.ProductEntity>

<div class="page-header">
    <h1>Products</h1>
    <p>New - Featured - Popular </p>
</div> 

<div class="container py-4 products-container">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 product-details-card">
                    <img src="/images/placeholders/@product.ProductImage" class="card-img-top" alt="@product.ProductName">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-ingress">@product.Ingress </p>
                        <p class="card-price">$ @product.Price.ToString()</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details", new { id = product.ArticleNumber })" class="btn btn-theme">Info</a>
                            <a href="@Url.Action("", "UnderConstruction")" class="btn btn-theme">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
