@{
    ViewData["Title"] = "Product Name";
}
@model ASP.NET_App.Models.Entities.ProductEntity

<div class="page-header">
    <h1>Details</h1>
    <p>Product-details</p>
</div>
<section class="product-details">
    <div class="container bg-light rounded p-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <img src="/images/placeholders/@Model.ProductImage" class="product-image rounded" alt="@Model.ProductName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="product-attributes bg-light d-flex flex-column justify-content-between">
                    <div>
                        <h3 class="product-name">@Model.ProductName</h3>
                        <h4 class="product-ingress">@Model.Ingress</h4>
                        <p class="product-description">Description <br /> @Model.Description</p>
                        <h4 class="product-price">Price: @Model.Price $</h4>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Products")" class="btn btn-theme">Back</a>
                            <a href="@Url.Action("", "UnderConstruction")" class="btn btn-theme">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>