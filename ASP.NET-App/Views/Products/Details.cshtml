@{
    ViewData["Title"] = "Product Name";
}
@model ASP.NET_App.Models.Entities.ProductEntity

<div class="page-header">
    <h1>Details</h1>
    <p>Product-details</p>
</div>

<div class="container py-4">
    <div class="row">
        <div class="col-md-6">
            <img src="/images/placeholders/Image1.svg" class="img-fluid" alt="@Model.ProductName">
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductName</h1>
            <p class="lead">@Model.Ingress</p>
            <p>@Model.Description</p>
        </div>
    </div>
</div>